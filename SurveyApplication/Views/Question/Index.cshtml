@model IEnumerable<SurveyApplication.TblQuestion>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
<style>
    .dataTables_length {
        float: left;
        height: 2.5em;
        width: 40%;
    }

    .dataTables_filter {
        float: right !important;
    }

    div.dataTables_wrapper div.dataTables_paginate {
        float: unset;
        text-align: right;
        white-space: nowrap;
    }
</style>
@if (Context.User.IsInRole("User"))
{
    <div class="container">
        <h2>Question Paper</h2>
        <ol>
            @*@{
                foreach (var data in ViewBag.t as IEnumerable<string>)
                {
                    <li>
                        @data
                    </li>
                }
              
            }*@

            @*main*@
            @*@{ 
                foreach(var p in ViewBag.t)
                {
                        <li>
                            @p
                        </li>
                }
            }*@

            @foreach(var p in ViewBag.data)
            {
                    <li>
                        @p
                        <ul>
                            @foreach (var q in ViewBag.datas)
                            {
                                for(int i=0; i < 1; i++)
                                {
                                    <input type="text" name="text1" />
                                }
                            }
                            @foreach (var r in ViewBag.options)
                            {
                                @r
                            }
                        </ul>
                    </li>
             }

        </ol>
    </div>
}
<div>
    <a href="~/Survey/Index" style="margin-bottom:20px; margin-top:20px; margin-left:300px">Back to List of Survey</a>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
